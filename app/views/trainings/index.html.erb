<p id="notice"><%= notice %></p>
<div class="container">
	
	<div class="page-header">
		<h1>All Trainings</h1>

	<% @trainings.each do |training| %>
	<div class="training">
		<strong><%= training.name %></strong>
		<p><%= training.content %></p>
		<div class="meta">
			<%= link_to time_ago_in_words(training.created_at) + " ago", training %>
			<span class="admin">
				| <%= link_to "Edit", edit_training_path(training) %> |
				<%= link_to "Delete", training, method: :delete, data: { confirm: "Are you sure you want to delete this training?"} %>
			</span>
		</div>
		
	</div>
<% end %>


<%= link_to 'New Training', new_training_path, class: "btn btn-primary" %>
